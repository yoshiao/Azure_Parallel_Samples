<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="CustomLoggingExample" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WorkerRole name="WorkerRole1">
    <LocalResources>
      <LocalStorage name="CustomLoggingLocation"
         sizeInMB="100" cleanOnRoleRecycle="false"/>
    </LocalResources>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WorkerRole>
</ServiceDefinition>